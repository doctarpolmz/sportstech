# === Common ===
NODE_ENV=development
PORT=8080
WEB_APP_URL=http://localhost:5173
API_URL=http://localhost:8080
CORS_ORIGIN=http://localhost:5173

# === Database (Postgres) ===
DATABASE_URL=postgresql://postgres:postgres@db:5432/sportstechai?schema=public

# === JWT/Auth ===
JWT_SECRET=change_me
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# === Mail (use any SMTP provider) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="SportsTech AI" <no-reply@sportstechai.local>

# === Google APIs ===
GOOGLE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-service-account.json
YOUTUBE_API_KEY=
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8080/api/integrations/google/callback

# === Uploads/Storage ===
UPLOAD_DIR=/workspace/apps/backend/uploads
MAX_UPLOAD_MB=500

# === WebSocket ===
WS_PATH=/socket.io
