{
  "name": "arip",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["apps/*", "services/*"],
  "scripts": {
    "dev:api": "npm -w services/api run dev",
    "dev:web": "npm -w apps/web run dev",
    "dev": "npm run dev:api & npm run dev:web",
    "db:up": "docker compose -f infra/db/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/db/docker-compose.yml down",
    "postinstall": "npx prisma generate --schema services/api/prisma/schema.prisma --no-engine",
    "build": "npm -w apps/web run build"
  }
}
