{
  "version": 2,
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/serverless.ts", "use": "@vercel/node", "config": { "includeFiles": "apps/server/src/**" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/serverless.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
